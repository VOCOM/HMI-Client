<Window
  x:Class="Client.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:client="clr-namespace:Client"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Style="{StaticResource MainWindow}"
  WindowStyle="None"
  mc:Ignorable="d">

  <StackPanel>
    <Grid Name="TitleBar" Style="{StaticResource TitleBar}">
      <Grid.Resources>
        <Style BasedOn="{StaticResource TitleButton}" TargetType="Button" />
      </Grid.Resources>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>

      <Button
        Grid.Column="1"
        Click="OnMinimizePress"
        Content="_" />
      <Button
        Grid.Column="2"
        Click="OnMaximizePress"
        Content="O" />
      <Button
        Grid.Column="3"
        Click="OnClosePress"
        Content="X"
        Style="{StaticResource CloseButton}" />
    </Grid>

    <StackPanel Name="Devices" Style="{StaticResource Panel}">
      <StackPanel Orientation="Horizontal">
        <TextBlock Style="{StaticResource SubTitle}" Text="Discovered BLE Devices:" />
        <Button
          Name="Refresh"
          Margin="10,0"
          Padding="10,0"
          Click="OnRefreshClick"
          Content="Refresh" />
      </StackPanel>

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ListBox
          Name="DeviceNames"
          Grid.Column="0"
          Style="{StaticResource List}" />
        <ListBox
          Name="AddressList"
          Grid.Column="1"
          Style="{StaticResource List}" />
      </Grid>
    </StackPanel>
    <StackPanel Style="{StaticResource Panel}">

      <TextBlock Style="{StaticResource SubTitle}" Text="Services:" />
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ListBox
          x:Name="ServiceNameList"
          Grid.Column="0"
          Style="{StaticResource List}" />
        <ListBox
          x:Name="ServiceList"
          Grid.Column="1"
          Style="{StaticResource List}" />
      </Grid>
    </StackPanel>
    <StackPanel Style="{StaticResource Panel}">
      <TextBlock Style="{StaticResource SubTitle}" Text="Packet Data:" />
      <TextBlock Name="Timestamp" Style="{StaticResource Text}" />
      <TextBlock Name="Orientation" Style="{StaticResource Text}" />
    </StackPanel>
  </StackPanel>
</Window>
