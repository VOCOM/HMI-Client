<Window
  x:Class="Client.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:client="clr-namespace:Client"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="HMI Client"
  d:DataContext="{d:DesignInstance Type=client:ObservableString}"
  WindowState="Maximized"
  mc:Ignorable="d">

  <Grid Margin="10">
    <StackPanel>
      <TextBlock
        Margin="0,0,0,10"
        FontSize="18"
        Text="Discovered BLE Devices:" />
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox
          x:Name="DeviceList"
          Grid.Column="0"
          BorderThickness="0" />
        <ListBox
          x:Name="AddressList"
          Grid.Column="1"
          BorderThickness="0" />
      </Grid>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox
          x:Name="ServiceNameList"
          Grid.Column="0"
          BorderThickness="0" />
        <ListBox
          x:Name="ServiceList"
          Grid.Column="1"
          BorderThickness="0" />
      </Grid>
      <TextBlock x:Name="IMU_Data" />
    </StackPanel>
  </Grid>
</Window>
