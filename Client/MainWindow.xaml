<Window
  x:Class="Client.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:gl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Style="{StaticResource MainWindow}"
  WindowStyle="None"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40px" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <Grid
      Name="TitleBar"
      Grid.Row="0"
      Style="{StaticResource TitleBar}">
      <Grid.Resources>
        <Style BasedOn="{StaticResource TitleButton}" TargetType="Button" />
      </Grid.Resources>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>

      <Button
        Grid.Column="1"
        Click="OnMinimizePress"
        Content="_" />
      <Button
        Grid.Column="2"
        Click="OnMaximizePress"
        Content="O" />
      <Button
        Grid.Column="3"
        Click="OnClosePress"
        Content="X"
        Style="{StaticResource CloseButton}" />
    </Grid>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="5*" />
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0">
        <StackPanel Name="Devices" Style="{StaticResource Panel}">
          <StackPanel Orientation="Horizontal">
            <TextBlock Style="{StaticResource SubTitle}" Text="Discovered BLE Devices:" />
            <Button
              Name="Refresh"
              Margin="10,0"
              Padding="10,0"
              Click="OnRefreshClick"
              Content="Refresh" />
          </StackPanel>
          <ListBox
            Name="DeviceNames"
            Grid.Column="0"
            Style="{StaticResource List}" />
        </StackPanel>
        <StackPanel Style="{StaticResource Panel}">
          <TextBlock Style="{StaticResource SubTitle}" Text="Services:" />
          <ListBox
            x:Name="ServiceNameList"
            Grid.Column="0"
            Style="{StaticResource List}" />
        </StackPanel>
        <StackPanel Style="{StaticResource Panel}">
          <TextBlock Style="{StaticResource SubTitle}" Text="Packet Data:" />
          <TextBlock Name="Timestamp" Style="{StaticResource Text}" />

          <TextBlock Name="Orientation" Style="{StaticResource Text}" />
        </StackPanel>
      </StackPanel>
      <gl:GLWpfControl Name="Viewport" Grid.Column="1" />
    </Grid>
  </Grid>
</Window>
